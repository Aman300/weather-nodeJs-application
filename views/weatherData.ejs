<!doctype html>
<html lang="en">

<head>
  <title>Aman weather api</title>
 
  <%- include('./header.ejs'); %>

<div class="container p-2 " style="border-radius: 40px;">
  <div class="card  ">
    <img class="card-img-top" src="holder.js/100px180/" alt="">
    <div class="card-body">
      <div class="container text-center ">
        <h3>
          <%= data.name%>
          
        </h3>
        <hr>
        <%= value%>
          <br><br>

          <div class="row">
            <div class="col-xl-2 col-6"></div>
            <div class="col-xl-12 col-12">             
              <img src="https://www.svgrepo.com/show/44377/temperature.svg" ><br>              
              <br>
            </div>

            <div class="col-xl-12 col-12">
            
                <h3>
                  <%= data.main.temp%> °C
                </h3>
                <% data.weather.forEach(function(item){ %>
                  <h3>
                    <%= item.main%>
                  </h3>
                <% }) %>
            </div>
            <div class="col-xl-2 col-6"></div>
          </div>
          <hr>
          <div class="container-fluid sm">
            <div class="row">
              <div class="col-xl-4 col-6">
                <h1> Feels like</h1>
                <img src="https://www.svgrepo.com/show/223587/temperature-fahrenheit.svg" alt=""><br>
                <h3>
                  <%= data.main.feels_like %>
                </h3>
              </div>
              <div class="col-xl-4 col-6">
                <h1>Humidity</h1>
                <img src="https://www.svgrepo.com/show/339273/humid.svg" alt=""><br>
                <h3>
                  <%= data.main.humidity %> %
                </h3>
              </div>
              <div class="col-xl-4 col-12">
                <h1>Pressure</h1>
                <img src="https://www.svgrepo.com/show/19063/pressure.svg" alt=""><br>
                <h3>
                  <%= data.main.pressure %> in
                </h3>
              </div>
            </div>
          </div>
          <!-- <h1>
          temp :  <%= data.main.temp%> °C
        </h1>
        <hr>
        <h1>
          feels like :  <%= data.main.feels_like %>
        </h1>
        <hr>
        <h1>
          humidity :  <%= data.main.humidity %>  %
        </h1>
        <hr>
        <h1>
          pressure :  <%= data.main.pressure %> in
        </h1> -->
      </div>
    </div>
  </div>
</div><br><br><br>

<%- include('./footer.ejs'); %>


